@{
    ViewBag.Title = "Index";
}
@using Notado.Models
@using Notado.Enuns
@model Notado.ViewModels.TurmaViewModel

<div class="card">
    <div class="card-body">
        <h1 class="card-title">Vizualizar Turmas</h1><br />

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Ensino</th>
                    <th scope="col">Ano</th>
                    <th scope="col">Divisor</th>
                    @if ((Session["usuarioLogado"] as Usuario).Autorizacao == Autorizacao.adm)
                    {
                        <th scope="col">Editar</th>
                        <th scope="col">Excluir</th>
                    }

                </tr>
            </thead>
            <tbody>
                @foreach (var Turma in ViewBag.Turmas)
                {
                    <tr class="busca">
                        <td class="info-nome" scope="row">@Turma.Id</td>
                        <td>@Turma.Ensino</td>
                        <td>@Turma.Ano</td>
                        <td>@Turma.Divisor</td>
                        @if ((Session["usuarioLogado"] as Usuario).Autorizacao == Autorizacao.adm)
                        {
                            <td><a href="/Turma/Editar/@Turma.Id" class="btn btn-primary">Editar</a></td>
                            <td><a htype="button" class="btn btn-danger" style="color:white;" data-toggle="modal" data-target="#myModal">Excluir</a></td>
                        }
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content justify-content-center">
                                    <div class="modal-header">
                                        <button type="button" class="close btn btn-de" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title"></h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>O item será excluído permanentemente. Deseja continuar?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/Turma/Excluir/@Turma.Id" class="btn btn-danger">Excluir</a>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </tr>
                }
            </tbody>
        </table>
        </div>
</div>