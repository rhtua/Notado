@model Notado.ViewModels.TurmaViewModel


<div class="card">
    <div class="card-body">
        <h1 class="card-title">Vizualizar Turmas</h1><br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Ensino</th>
                    <th scope="col">Ano</th>
                    <th scope="col">Divisor</th>
                    <th scope="col">Selecionar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var Turma in ViewBag.Turmas)
                {
                    <tr class="busca">
                        <td class="info-nome" scope="row">@Turma.Id</td>
                        <td>@Turma.Ensino</td>
                        <td>@Turma.Ano</td>
                        <td>@Turma.Divisor</td>
                        <td><a href="/Nota/Index/@Turma.Id" class="btn btn-primary">Ver Alunos</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>