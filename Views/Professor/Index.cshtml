

@model Notado.ViewModels.ProfessorViewModel


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Telefone</th>
            <th scope="col">Formação</th>
            <th scope="col">Disciplina</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Professor in ViewBag.Professores)
        {
            <tr class="busca">
                <th scope="row">@Professor.Id</th>
                <td class="info-nome">@Professor.nome</td>
                <td>@Professor.email</td>
                <td>@Professor.telefone</td>
                <td>@Professor.Formacao</td>
                <td>@Professor.Disciplina</td>

                <td><a href="/Professor/Editar/@Professor.Id" class="btn btn-primary">Editar</a></td>
                <td><a htype="button" class="btn btn-primary" style="color:white;" data-toggle="modal" data-target="#myModal">Excluir</a></td>

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content justify-content-center">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title"></h4>
                            </div>
                            <div class="modal-body">
                                <p>O item será excluído permanentemente. Deseja continuar?</p>
                            </div>
                            <div class="modal-footer">
                                <a href="/Professor/Excluir/@Professor.Id" class="btn btn-primary">Excluir</a>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>

            </tr>
        }
    </tbody>
</table>
