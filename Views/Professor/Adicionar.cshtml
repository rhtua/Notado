
@{
    ViewBag.Title = "Adicionar";
}

@model Notado.ViewModels.ProfessorViewModel


<form action="/Professor/Adicionar" method="post">
    <div class="text-center">
        <h1 class=" text-gray-900">Cadastro Professor</h1>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="Nome">Nome <h11>*</h11></label>
            <input id="Nome" name="ProfessorViewModel.nome" placeholder="" class="form-control" required="" type="text">
        </div>
        <div class="col">
            <label for="email">Email <h11>*</h11></label>
            <input id="email" name="ProfessorViewModel.email" class="form-control" placeholder="email@email.com" required="" type="email">
        </div>
    </div>


    <div class="form-group row">
        <div class="col">
            <label for="cpf">CPF</label>
            <input id="cpf" name="ProfessorViewModel.cpf" placeholder="Apenas números" class="form-control" required="" maxlength="11" pattern="[0-9]+$">
        </div>
        <div class="col">
            <label for="Nome">Nascimento <h11>*</h11></label>
            <input id="dtnasc" name="ProfessorViewModel.dtnasc" placeholder="DD/MM/AAAA" class="form-control" required="" type="text" maxlength="10" OnKeyPress="formatar('##/##/####', this)" onBlur="showhide()">
        </div>
        <div class="col">
            <label for="telefone">Telefone <h11>*</h11></label>
            <input id="telefone" name="ProfessorViewModel.telefone" class="form-control" placeholder="XX XXXXX-XXXX" required="" type="text" maxlength="13" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$"
                   OnKeyPress="formatar('## #####-####', this)">
        </div>
    </div>
      <div class="form-group row">
        <div class="col">
            <label for="formacao">Formação</label>
            <input id="formacao" name="ProfessorViewModel.Formacao" placeholder="Mais recente ou atuante" class="form-control" required="">
        </div>
        <div class="col">
            <label for="disciplina">Disciplina <h11>*</h11></label>
            <input id="disciplina" name="ProfessorViewModel.Disciplina" class="form-control" placeholder="XX XXXXX-XXXX" required="" type="text">
        </div>
    </div>

    <div class="text-center">
        <h1 class=" text-gray-900">Endereço</h1>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="cep">CEP <h11>*</h11></label>
            <input id="cep" name="ProfessorViewModel.cep" placeholder="Apenas números" class="form-control" required="" value="" type="search" maxlength="8" pattern="[0-9]+$">
        </div>
        <div class="col-md-2">
            <label for="button" style="opacity:0;">Pesquisar</label><br />
            <button id="button" type="button" class="btn btn-primary button" onclick="pesquisacep(cep.value)">Pesquisar</button>
        </div>

        <div class="col">
            <label for="rua">Rua</label>
            <input id="rua" name="ProfessorViewModel.rua" class="form-control" placeholder="" readonly="readonly" required="" type="text">

        </div>
        <div class="col">
            <label for="numero">Nº <h11>*</h11></label>
            <input id="numero" name="ProfessorViewModel.numero" class="form-control" placeholder="" required="" type="text">

        </div>
    </div>

    <div class="form-group row">

        <div class="col">
            <label for="bairro">Bairro</label>
            <input id="bairro" name="ProfessorViewModel.bairro" class="form-control" placeholder="" required="" readonly="readonly" type="text">
        </div>

        <div class="col">
            <label for="cidade">Cidade</label>
            <input id="cidade" name="ProfessorViewModel.cidade" class="form-control" placeholder="" readonly="readonly" required="" type="text">
        </div>


        <div class="col">
            <label for="estado">Estado</label>
            <input id="estado" name="ProfessorViewModel.estado" class="form-control" placeholder="" readonly="readonly" required="" type="text">

        </div>
    </div>
    <!-- Button (Double) -->
    <div class="form-group">
        <label class="col-md-2 control-label text-center" for="Cadastrar"></label>
        <div class="col-md-8">
            <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
            <button id="Cancelar" name="Cancelar" class="btn btn-danger" type="Reset">Cancelar</button>
        </div>
    </div>
</form>

<script src="~/Scripts/form.js"></script>